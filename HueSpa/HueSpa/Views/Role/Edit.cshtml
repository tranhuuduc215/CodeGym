@model EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}
<h3>Role Managment &ndash; @ViewBag.Title</h3>
<form asp-controller="Role" asp-action="Edit" method="post" class="mt-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input hidden asp-for="RoleId" />
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="RoleName"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" placeholder="Enter Role Name">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Role" asp-action="Index" class="btn btn-warning">Back</a>
        </div>
    </div>
</form>
