@model HomeCreateViewModel

@{
    ViewBag.Create = "Create Product";
    List<Category> categories = ViewBag.Categories;
}

    <div class="col-sm-6 offset-sm-3">
        <form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post" class="mt-2">
            <div class="row form-group">
                <div class="col-sm-3">
                    <label asp-for="ProdName"></label>
                </div>
                <div class="col-sm-9">
                    <input asp-for="ProdName" class="form-control" placeholder="Enter Product Name">
                    <span asp-validation-for="ProdName" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-3">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-sm-9">
                    <input asp-for="Price" class="form-control" placeholder="Enter Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-3">
                    <label asp-for="ProdInformation"></label>
                </div>
                <div class="col-sm-9">
                    <textarea asp-for="ProdInformation" class="form-control" placeholder="Enter Information"></textarea>
                    <span asp-validation-for="ProdInformation" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-3">
                    <label asp-for="CategoryId"></label>
                </div>
                <div class="col-sm-9">
                    <select asp-for="CategoryId" class="custom-select">
                        <option value="">Select a department</option>
                        @if (categories != null)
                        {
                            foreach (var category in categories)
                            {
                                <option value="@category.CategoryId">@category.CategoryName</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-3">
                    <label asp-for="Images"></label>
                </div>
                <div class="col-sm-9">
                    <div class="custom-file">
                        <input class="custom-file-input" asp-for="Images">
                        <label class="custom-file-label" for="customFile">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Back</a>
                </div>
            </div>
        </form>
    </div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
        });
    </script>
}
